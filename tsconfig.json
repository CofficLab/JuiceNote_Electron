{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/tools/FooterJS.js",
    "src/tools/FooterJS.js",
    "src/ui/extensions/Brick.js",
    "src/ui/extensions/Brick.js",
  ],
  "exclude": ["node_modules", ".next"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}