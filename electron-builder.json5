/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "YourAppID",
  asar: false,
  directories: {
    output: "release/",
  },
  files: [
    "dist",
    {
      from: "database",
      to: "database",
    },
    {
      from: "temp",
      to: "temp",
    },
  ],
  mac: {
    artifactName: "${productName}.${ext}",
    target: ["dmg"],
    icon: "./public/logo5.icns",
  },
  win: {
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
    artifactName: "${productName}.${ext}",
    icon: "./public/logo.png",
    category: "Utility",
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
}
