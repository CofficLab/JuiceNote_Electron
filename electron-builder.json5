/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: "YourAppID",
  productName: "快易知",
  asar: false,
  directories: {
    output: "release/",
  },
  // 打包时复制这些文件
  files: [
    "dist/main",
    "dist/preload",
    {
      from: "dist/ui",
      to: "",
    },
    "database",
    "temp",
    "playground",
  ],
  mac: {
    artifactName: "kuaiyizhi_${version}.${ext}",
    target: ["dmg"],
    icon: "./public/logo5.icns",
  },
  win: {
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
    artifactName: "kuaiyizhi_${version}.${ext}",
    icon: "./public/logo.png",
  },
  linux: {
    artifactName: "kuaiyizhi_${version}.${ext}",
    category: "Utility",
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
}
